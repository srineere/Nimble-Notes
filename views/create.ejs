<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="main create-note content">
    <form action="/notes" method="POST">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title">
      <label for="body">Content:</label>
      <textarea id="body" name="body" required class="input-box"></textarea>
      <input style="display: none;" type="objid" id="objid" name="objid" value="<%= user.email %>" >
      <button>Save</button>
    </form>
  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>